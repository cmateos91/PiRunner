{
  "version": 2,
  "name": "pi-runner-mainnet",
  "public": true,
  "trailingSlash": false,
  "cleanUrls": false,
  "outputDirectory": ".",
  "env": {
    "NODE_ENV": "production",
    "PI_NETWORK_MODE": "mainnet"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/**/*.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/validation-key.txt",
      "destination": "/public/validation-key.txt"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}