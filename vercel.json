{
  "version": 2,
  "name": "pi-runner-mainnet",
  "public": true,
  "trailingSlash": false,
  "cleanUrls": true,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "env": {
    "NODE_ENV": "production",
    "PI_NETWORK_MODE": "mainnet"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://*.minepi.com https://*.pinet.com"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}