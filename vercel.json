{
  "version": 2,
  "public": true,
  "trailingSlash": false,
  "cleanUrls": true,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "functions": {
    "api/payments.js": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}